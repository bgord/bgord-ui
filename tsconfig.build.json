{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,

    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",

    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "tinykeys": ["node_modules/tinykeys/dist/tinykeys"]
    },

    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
