{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,

    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
