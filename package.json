{
  "name": "@bgord/ui",
  "version": "0.5.11",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.9.1"
  },
  "scripts": {
    "build:js": "NODE_ENV=production bun build src/index.ts --minify --format esm --outdir dist --packages external --external react --external react-dom --external react/jsx-runtime --external react-router",
    "build:types": "bunx tsc --emitDeclarationOnly",
    "build": "bun run build:js && bun run build:types"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@happy-dom/global-registrator": "18.0.1",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bun": "1.2.22",
    "@types/js-cookie": "3.0.6",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "cspell": "9.2.1",
    "knip": "5.64.0",
    "lefthook": "1.13.2",
    "only-allow": "1.2.1",
    "shellcheck": "4.1.0"
  },
  "dependencies": {
    "better-auth": "1.3.13",
    "js-cookie": "3.0.5",
    "polish-plurals": "1.1.0",
    "tinykeys": "3.0.0"
  }
}
